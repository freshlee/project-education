/* index.wxss */
@import "../../wxParse/wxParse.wxss";
.body{
  box-sizing: border-box;
  width: 100%;
  position: relative;
  background: gainsboro;
}
.case{
  padding:20rpx 60rpx;
  margin: 0 0 5rpx;
  background: white;
}
.picture{
  height: 200rpx;

}
.remark .title{
  font-size: 40rpx;
}
.remark .li{
  display: inline-block;
  width: 20%;
  padding: 10rpx;
  background: gainsboro;
  border-radius: 5%;
  text-align: center;
  margin: 30rpx 20rpx 0;
}
.panel{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.panel view{
  display: inline-block;
  width: 50%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background: red;
  box-sizing: border-box;
  font-size: 35rpx;
  font-weight: bold;
}
.panel view:last-child{
  background: orangered;
}
.base{
  border-bottom: 1px solid gainsboro;
}
.base view{
  font-size:35rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
}
.attr view{
  font-size: 30rpx;
  margin-bottom: 5rpx;
}
.free view{
  width: 100%;
  background: red;
  position: fixed;
  bottom: 0;
  text-align: center;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: orangered;
  box-sizing: border-box;
  font-size: 35rpx;
  font-weight: bold;

}
