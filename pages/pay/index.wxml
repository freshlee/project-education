<!--pages/pay/index.wxml-->

<view class="well">
    <view class="pay-content">
        <image src="/images/pay-icon.png"></image>
        <view class="v1">付款金额</view>
        <view class="v2">￥{{price}}</view>
    </view>
</view>

<view class="well lines">
    <view class="wells">
        <text class="t1">订单号：</text>
        <text class="t2">{{ordersn}}</text>

        <view style="width:100%; height:120rpx;"></view>
         <button class="pay-btn" type="primary" bindtap="pay">微 信 支 付</button>
    </view>
</view>









