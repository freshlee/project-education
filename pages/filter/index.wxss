/* index.wxss */
.meter>view{
   display: inline-block;
   font-size: 35rpx;
   padding:10rpx 30rpx; 
}
.meter .typeon{
  font-size:30rpx;
  text-align: center;
  padding: 5rpx 10rpx;
  border-radius: 10%;
  background: darkorange;
  color:white;
}
.hidden{
  display: block!important;
  position: relative;
  width: 100%;
  text-align: center;
  top: -60rpx;
  box-sizing: border-box;
  background: white;
  z-index: 199;
  transition-property:top;
  transition-duration: 1s; 
}
.show{
  box-sizing: border-box;
  display: block;
  position: relative;
  top:0;
  width: 100%;
  text-align: center;
  transition-property:all;
  transition-duration: 1s; 
}
.show image{
  width: 30rpx;
  height: 30rpx;
    transform: rotate(180deg);
}
.hidden image{
  width: 30rpx;
  height: 30rpx;
}
.case{
  padding: 0 60rpx;
  margin: 5rpx 0;
  background: white; 
  position: relative;
}
.case .li{
   display: inline-block;
}

.filteroff{
  height: 0;
  overflow: hidden;
 transition-property:all;
  transition-duration: 1s; 
}
.filteron{
  height:600rpx;
  transition-property:all;
  transition-duration: 1s; 
    padding:40rpx 60rpx;
      top:70rpx;
      overflow: hidden;
}
.filter{
  position: fixed;
  z-index: 99;
  background: white;
  width: 100%;
  box-sizing: border-box;
  opacity: 0.9;

}
.filter .list{
  margin:20rpx 0;
}
.filter .typename{
  font-size:40rpx;
  border-bottom: 1px solid grey;
}
.filter .type{
  font-size:30rpx;
  display: inline-block;
  width: 20%;
  text-align: center;
  margin: 15rpx 15rpx;
  border-radius: 10%;
}
.filter .typeon{
  font-size:30rpx;
  display: inline-block;
  width: 20%;
  text-align: center;
  margin: 15rpx 15rpx;
  border-radius: 10%;
  background: black;
  color:white;
}
.panel{
  font-size: 35rpx;
  width: 60%;
  margin: 0 20%;
