/**app.wxss**/
@import "./style/layout.wxss";
page { background: #fff; }
text { padding: 0; margin: 0; }
.clearfix:after { content: '.'; display: block; clear: both; height: 0; visibility: hidden; }
view, text {font-family:Microsoft YaHei,STXihei,STHeiti,Verdana,Arial,Helvetica,sans-serif; font-size: 24rpx;}
image { width: 100%; height: 100%; padding: 0; margin: 0; } 
.well { width: 750rpx; margin: auto; }
.wells { width: 710rpx; margin: auto; }
.mask { display: none; position: fixed; top: 0; bottom: 0; right: 0; left: 0;  z-index: 10;  background: #000; filter: alpha(opacity=60); opacity: 0.6; }
.mask.on { display: block !important; }
.border-top  { border-top: 1rpx solid #e7e7e7; }
.border-bottom { border-bottom: 1rpx solid #e7e7e7; }
.out { display: none; }
.on { display: block !important; }

.null-comtent { width: 100%; height: 450rpx; text-align: center; }
.null-comtent image { width: 160rpx; height: 160rpx; margin-top: 150rpx; }
.null-comtent view { width: 100%; margin-top: 15rpx; text-align: center; }
.null-comtent view text { font-size: 26rpx; color: #9b9b9b; }
.well.coprity { text-align: center; }
.well.coprity view { width: 100%; margin-top:30rpx; font-size: 24rpx; color: #c5c5c5; padding-bottom: 20rpx }
::-moz-scrollbar { width: 0; height: 0; color: transparent; }
::-webkit-scrollbar { width: 0; height: 0; color: transparent;}
::-sm-scrollbar { width: 0; height: 0; color: transparent; }
